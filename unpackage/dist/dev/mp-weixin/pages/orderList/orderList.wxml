<view><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="unique"><view class="order-list"><view class="v-header"><text class="col-2">{{item.addtime}}</text><block wx:if="{{item.pay_status==1}}"><text class="col-3 color1">未支付</text></block><block wx:if="{{item.pay_status==2}}"><text class="col-3 color1">已支付 待发货</text></block><block wx:if="{{item.pay_status==3}}"><text class="col-3 color1">已发货</text></block></view><view class="v-bodyer"><view class="row"><text class="col-1">订单编号</text><text class="col-2">{{item.order_num}}</text></view><view class="row"><text class="col-1">订单金额</text><text class="col-2">{{item.sum_price+"元"}}</text></view><view class="row"><text class="col-1">购买数量</text><text class="col-2">{{item.num+"套"}}</text></view><view class="row"><text class="col-1">客户姓名</text><text class="col-2">{{item.uname}}</text></view><view class="row"><text class="col-1">联系电话</text><text class="col-2">{{item.phone}}</text></view><view class="row"><text class="col-1">邮寄地址</text><text class="col-2">{{item.sheng+item.shi+item.qu+item.address}}</text></view><block wx:if="{{item.pay_status>2}}"><view class="row row-wuliu"><text class="col-1">快递公司</text><text class="col-2">{{item.logistics}}</text></view></block><block wx:if="{{item.pay_status>2}}"><view class="row"><text class="col-1">快递单号</text><text class="col-2" selectable="{{true}}">{{item.tracknumber}}</text></view></block><block wx:if="{{item.pay_status==1}}"><button class="gopay" data-orderid="{{item.order_num}}" data-event-opts="{{[['tap',[['gopay',['$event']]]]]}}" catchtap="__e">去支付</button></block></view></view></block><view class="{{['nodata '+(nodata?'show':'')]}}">您还没有订单！</view></view>