
page {
    padding: 30rpx 0;
}
.section-total {
    background-color: #fff;
    text-align: center;
    padding: 50rpx 0;
}
.section-total .item {
    text-align: center;
}
.section-total .item text {
    display: block;
}
.section-total .item .row1 {
    color: #111;
    font-size: 32rpx;
    padding: 0 0 20rpx;
}
.section-total .item .row2 {
    color: #f14a5e;
    font-size: 64rpx;
    font-family: PingFangSC-Medium;
    font-weight: bold;
}
.profit-list {
    background-color: #fff;
    margin-top: 30rpx;
}
.profit-list .p-title {
    color: #999;
    font-size: 32rpx;
    padding: 25rpx 30rpx;
    border-bottom: solid 1rpx #eee;
    text-align: center;
}
.profit-list .list {
    display: flex;
    align-items: center;
    padding: 22rpx 30rpx;
    position: relative;
    font-size: 28rpx;
    color: #000;
}
.profit-list .list::after {
    content: '';
    display: block;
    position: absolute;
    left: 30rpx;
    right: 0;
    bottom: 0;
    border-top: solid 1rpx #f5f5f5;
}
.profit-list .list:nth-last-child(1)::after {
    border-top: 0;
}
.profit-list .list .col-1 {
    flex: 1;
    margin-right: 20rpx;
}
.profit-list .list .col-2 .color {
    color: #f14a5e;
}
.profit-list .list .col-3 {
    flex: 1;
    margin-right: 5rpx;
}
.section-btns {
    padding: 70rpx 40rpx 0;
}
.section-btns .btn {
    height: 92rpx;
    line-height: 92rpx;
    background-color: #3f270b;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
}
.section-btns .btn.disabled {
    background-color: #ddd;
}

